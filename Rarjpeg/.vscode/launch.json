    {
        "version": "2.0.0",
        "tasks": [
          {
            "label": "compile_and_run",
            "type": "shell",
            "command": "gcc",
            "args": [
              "-Wall",
              "-Wextra",
              "-Wpedantic",
              "-std=c11",
              "first_work.c",
              "-o", 
              "output"
            ],
            "group": {
              "kind": "build",
              "isDefault": true
            },
            "presentation": {
              "echo": true,
              "reveal": "always",
              "focus": false,
              "panel": "dedicated"
            },
            "problemMatcher": "$gcc"
          }
        ]
      }
      
